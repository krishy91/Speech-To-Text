<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.in.bruegge.controllers.MainController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <VBox alignment="CENTER" prefHeight="394.0" prefWidth="280.0" spacing="20.0" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRecordButtonAction" text="Record" />
                <Button mnemonicParsing="false" onAction="#handleTranscribeButtonAction" text="Transcribe" />
                <Label fx:id="transcribedText" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</GridPane>